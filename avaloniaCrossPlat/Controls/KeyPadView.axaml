<UserControl
    x:Class="avaloniaCrossPlat.Controls.KeyPadView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:avaloniaCrossPlat.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:avaloniaCrossPlat.ViewModels"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="control:KeyPadView"
    mc:Ignorable="d">

    <UserControl.Styles>
        <Style Selector="Button.KeyPad">
            <Setter Property="Background" Value="#0a9396" />
            <Setter Property="RenderTransform" Value="scale(1)" />
        </Style>
        <Style Selector="Button.KeyPad:pressed">
            <Setter Property="RenderTransform" Value="scale(1.2)" />
        </Style>
    </UserControl.Styles>
    <UserControl.Transitions>
        <Transitions>
            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:2" />
        </Transitions>
    </UserControl.Transitions>

    <Grid
        Width="300"
        Height="300"
        Margin="10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Buttons  -->
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Classes="KeyPad"
            Click="Button_Click"
            Content="1"
            HotKey="NumPad1"
            CornerRadius="50"
            FontSize="30" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            HotKey="NumPad2"
            Content="2"
            CornerRadius="50"
            FontSize="30" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="3"
            CornerRadius="50"
            FontSize="30" />

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="4"
            CornerRadius="50"
            FontSize="30" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="5"
            CornerRadius="50"
            FontSize="30" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="6"
            CornerRadius="50"
            FontSize="30" />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="7"
            CornerRadius="50"
            FontSize="30" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="8"
            CornerRadius="50"
            FontSize="30" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Margin="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#0a9396"
            Click="Button_Click"
            Content="9"
            CornerRadius="50"
            FontSize="30" />
    </Grid>
</UserControl>
