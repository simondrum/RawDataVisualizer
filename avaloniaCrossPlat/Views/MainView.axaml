<UserControl
  x:Class="avaloniaCrossPlat.Views.MainView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:avaloniaCrossPlat.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="using:avaloniaCrossPlat.ViewModels"
  d:DesignHeight="790"
  d:DesignWidth="390"
  x:DataType="vm:MainViewModel"
      Background="#ffffff"
  mc:Ignorable="d">
  <Design.DataContext>
    <!--
      This only sets the DataContext for the previewer in an IDE,
      to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
    -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    <ProgressBar
      Grid.Row="0"
      Height="10"
      Margin="0,8,0,0"
      IsVisible="{CompiledBinding IsDataValid}"
      Maximum="100"
      Minimum="0"
      Value="{CompiledBinding RefreshProgress}">

      <ProgressBar.Transitions>
        <Transitions>
          <DoubleTransition
            Easing="CubicEaseOut"
            Property="Value"
            Duration="0:0:0.2" />
        </Transitions>
      </ProgressBar.Transitions>
    </ProgressBar>
    <!-- <controls:KeyPadView Grid.Row="1" Code="{CompiledBinding Code, Mode=TwoWay}">
      <controls:KeyPadView.IsVisible>
        <MultiBinding Converter="{x:Static BoolConverters.And}">
          <Binding Path="!Error" />
          <Binding Path="!IsDataValid" />
        </MultiBinding>
      </controls:KeyPadView.IsVisible>
    </controls:KeyPadView>-->
    <Grid
      Grid.Row="1"
      Background="#ffffff"
      ColumnDefinitions="*,*,*,40"
      RowDefinitions="*,*,*,*">
      <!--  Première ligne  -->
      <Border
        Grid.Row="0"
        Grid.Column="0"
        Margin="10"
        Background="#e0e0e0"
        CornerRadius="20"
        BoxShadow="5 5 0 0 #1f1f1f">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="Intérieur" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding InOutViewModel.InTemperature, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <Border
        Grid.Row="0"
        Grid.Column="1"
        Margin="10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="20">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="Extérieur" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding InOutViewModel.OutTemperature, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <Border
        Grid.Row="0"
        Grid.Column="2"
        Margin="10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="20">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="Consigne" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding InOutViewModel.InstructionTemperature}" />
        </Grid>
      </Border>
      <!--  Ballon  -->
      <Border
        Grid.Row="1"
        Grid.Column="0"
        Margin="10,10,10,0"
        BoxShadow="5 5 0 0 #1f1f1f"
        Background="#e0e0e0"
        CornerRadius="20,20,0,0">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding UpperHotWaterViewModel.Value, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <Border
        Grid.Row="2"
        Grid.Column="0"
        Margin="10,0,10,0"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="00">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding MidHotWaterViewModel.Value, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <Border
        Grid.Row="3"
        Grid.Column="0"
        Margin="10,0,10,10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="0,0,20,20">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding LowHotWaterViewModel.Value, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <!--  Poele  -->

      <Border
        Grid.Row="1"
        Grid.Column="1"
        Margin="10,10,0,10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="20,0,0,20">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding PompePoele, StringFormat=' {0}%'}}" />
          <Viewbox
            Grid.Row="2"
            Width="40"
            Height="40"
            Classes="Arrow"
            RenderTransformOrigin="0.5,0.5">
            <Path Fill="#3d3d3d" Stretch="Uniform">
              <Path.Data>
                <GeometryGroup>
                  <PathGeometry Figures="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z" />
                </GeometryGroup>
              </Path.Data>
            </Path>
          </Viewbox>

        </Grid>
      </Border>
      <Border
        Grid.Row="1"
        Grid.Column="2"
        Margin="0,10,10,10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="0,20,20,0">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="Poêle" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding StoveViewModel.Value, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <!--  Solaire  -->
      <Border
        Grid.Row="2"
        Grid.Column="1"
        Margin="10,10,0,10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="20,0,0,20">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#1f1f1f"
            Text="{CompiledBinding PompeSolaire, StringFormat=' {0}%'}}" />
          <Viewbox
            Grid.Row="2"
            Width="40"
            Height="40"
            Classes="Arrow"
            RenderTransformOrigin="0.5,0.5">
            <Path Fill="#3d3d3d" Stretch="Uniform">
              <Path.Data>
                <GeometryGroup>
                  <PathGeometry Figures="m237.248 512 265.408 265.344a32 32 0 0 1-45.312 45.312l-288-288a32 32 0 0 1 0-45.312l288-288a32 32 0 1 1 45.312 45.312L237.248 512z" />
                </GeometryGroup>
              </Path.Data>
            </Path>
          </Viewbox>
        </Grid>
      </Border>
      <Border
        Grid.Row="2"
        Grid.Column="2"
        Margin="0,10,10,10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="0,20,20,0">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="Solaire" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            Foreground="#1f1f1f"
            FontWeight="Bold"
            Text="{CompiledBinding SolarPanelViewModel.Value, StringFormat=' {0}°'}}" />
        </Grid>
      </Border>
      <!-- Mur -->
      <Border
        Grid.Row="3"
        Grid.Column="1"
        Margin="0,10,10,10"
        Background="#e0e0e0"
        BoxShadow="5 5 0 0 #1f1f1f"
        CornerRadius="20,20">
        <Grid Margin="5" RowDefinitions="1*,2*,2*,1*">
          <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="18"
            Foreground="#1f1f1f"
            Text="Chauffage" />
          <TextBlock
            Grid.Row="1"
            Margin="10"
            FontSize="30"
            Foreground="#1f1f1f"
            FontWeight="Bold"
            Text="{CompiledBinding PompeMur, StringFormat=' {0}%'}}" />
        </Grid>
      </Border>
    </Grid>
    <Grid
      Grid.Row="1"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      ColumnDefinitions="*,*"
      IsVisible="{CompiledBinding IsDataValid}" />
  </Grid>
</UserControl>
